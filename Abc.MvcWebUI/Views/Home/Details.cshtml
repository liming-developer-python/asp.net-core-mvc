                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <h4 id="product-price">@Model.Price ₺</span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">

                        @using (Html.BeginForm("AddToCart", "Cart"))
                        {
                            @Html.HiddenFor(i => i.Id)
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
